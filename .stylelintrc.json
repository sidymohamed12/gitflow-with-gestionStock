{
  "extends": "stylelint-config-standard",
  "rules": {
    "import-notation": null,
    "no-empty-source": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
      }
    ],
    "block-no-empty": true
  },
  "ignoreFiles": ["**/node_modules/**"]
}
